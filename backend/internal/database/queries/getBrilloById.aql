LET b = DOCUMENT(CONCAT('Brillo/', @id))

LET comment = (
    FOR brillo in Brillo
        FILTER brillo.comments == b._id
        RETURN brillo
)

LET author = DOCUMENT('Users', b.author)

RETURN MERGE(b, {
    username: author._key,
    profile_img: author.profile_img,
    name : author.name,
    comments : comment
})
