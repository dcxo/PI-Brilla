LET b = DOCUMENT(CONCAT('Brillo/', @id))

LET comment = (
    FOR comment in Comments
    FILTER comment._to == b._id
    Return comment
)

FOR author IN Author
FILTER author._from == b._id
Return merge(b,{
    username: author._key,
    profile_img: author.profile_img,
    name : author.name,
    comments : comment
}) 

